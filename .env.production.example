# ABSERVICE Production Environment Configuration
# Copy to .env.production on the server

# ==============================================================================
# Django Settings
# ==============================================================================

# SECURITY: Generate a new secret key for production!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-here

# Debug MUST be False in production
DEBUG=False

# Your domain (without https://)
ALLOWED_HOSTS=pme-si.votredomaine.com,www.pme-si.votredomaine.com

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=https://pme-si.votredomaine.com,https://www.pme-si.votredomaine.com

# ==============================================================================
# Database Configuration (PostgreSQL)
# ==============================================================================

POSTGRES_DB=pme_si
POSTGRES_USER=pme_si_user
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgres://pme_si_user:your-strong-database-password@db:5432/pme_si

# ==============================================================================
# Email Configuration (IONOS SMTP)
# ==============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.ionos.fr
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@votredomaine.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=ABSERVICE <noreply@votredomaine.com>

# ==============================================================================
# Redis Configuration
# ==============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# ==============================================================================
# Security Settings (Production)
# ==============================================================================

SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==============================================================================
# Application Settings
# ==============================================================================

LANGUAGE_CODE=fr-fr
TIME_ZONE=Europe/Paris

# ==============================================================================
# Sentry Error Tracking (optional but recommended)
# ==============================================================================

# SENTRY_DSN=https://your-sentry-dsn
